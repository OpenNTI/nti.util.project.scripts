#!/usr/bin/env bash
PWD="`dirname \"$0\"`"
PRJS1=($PWD/*/.git)
PRJS2=($PWD/**/*/.git)
PRJS=("${PRJS1[@]}" "${PRJS2[@]}")

set -e;

function trim() {
    INPUT=$1;
    if (( "${#1}" > "$2" )); then
        GAP_L=${#3};
        PREFIX=$(echo $INPUT | awk '{ split($0,a,"."); print a[1]; }')
        PREFIX_L=$(echo $PREFIX | wc -c - | awk '{ print $1; }')
        LEAD_L=$(expr $COLUMNS - $PREFIX_L - $GAP_L)
        LEAD_L=$(expr $LEAD_L / 2)
        TAIL_L=$(expr $LEAD_L - $GAP_L)

        LEAD=$(echo $INPUT | grep -o "^.\{$(expr $PREFIX_L + $GAP_L + $LEAD_L)\}")
        TAIL=$(echo $INPUT | grep -o ".\{$TAIL_L\}$")
        echo $LEAD$3$TAIL
    else
        echo "$1"
    fi
}

function getMaxWidth {
    if command -v tput > /dev/null; then
        COLUMNS=$(tput cols)
    elif command -v stty > /dev/null; then
        size=$(stty size)
        COLUMNS=${size#* }
    fi
}


function notify {
    prjs=();
    for f in $@;
    do  
        line=$(dirname $f);
        prjs+=("${line#*/}");
    done

    len=${#prjs[@]};
    intro="Pulling $len repositories... ";
    introLen=${#intro};

    str="${prjs[@]}";
    
    getMaxWidth
    let max=${COLUMNS:-80}-3
    
    trim "$intro($str)" $max ' â€¦ '
}

function pull {
    for f in $@;
    do
        (
            cd $(dirname $f);
            OUT=$(git pull -r 2>&1)
            if [ $? -ne 0 ]; then
                echo $OUT;
            fi
            echo -n '.'
        ) &
    done

}

notify ${PRJS[@]}
pull ${PRJS[@]}

for job in `jobs -p`
do
    wait $job || exit 1
done

echo '';
echo 'Done';